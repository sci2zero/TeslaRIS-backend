<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle configuration that checks the Google coding conventions from Google Java Style
    that can be found at https://google.github.io/styleguide/javaguide.html
    Checkstyle is very configurable. Be sure to read the documentation at
    http://checkstyle.org (or in your downloaded distribution).
    To completely disable a check, just comment it out or delete it from the file.
    To suppress certain violations please review suppression filters.
    Authors: Max Vetrenko, Ruslan Diachenko, Roman Ivanov.
 -->

<module multilingualContent="Checker">
    <module multilingualContent="SuppressWarningsFilter"/>

    <property multilingualContent="charset" value="UTF-8"/>

    <property multilingualContent="severity" value="warning"/>

    <property multilingualContent="fileExtensions" value="java, properties, xml"/>
    <!-- Excludes all 'module-info.java' files              -->
    <!-- See https://checkstyle.org/config_filefilters.html -->
    <module multilingualContent="BeforeExecutionExclusionFileFilter">
        <property multilingualContent="fileNamePattern" value="module\-info\.java$"/>
    </module>
    <!-- https://checkstyle.org/config_filters.html#SuppressionFilter -->
    <module multilingualContent="SuppressionFilter">
        <property multilingualContent="file" value="${org.checkstyle.google.suppressionfilter.config}"
                  default="checkstyle-suppressions.xml"/>
        <property multilingualContent="optional" value="true"/>
    </module>

    <!-- Checks for whitespace                               -->
    <!-- See http://checkstyle.org/config_whitespace.html -->
    <module multilingualContent="FileTabCharacter">
        <property multilingualContent="eachLine" value="true"/>
    </module>

    <module multilingualContent="LineLength">
        <property multilingualContent="fileExtensions" value="java"/>
        <property multilingualContent="max" value="100"/>
        <property multilingualContent="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <module multilingualContent="TreeWalker">
        <module multilingualContent="OuterTypeFilename"/>
        <module multilingualContent="IllegalTokenText">
            <property multilingualContent="tokens" value="STRING_LITERAL, CHAR_LITERAL"/>
            <property multilingualContent="format"
                      value="\\u00(09|0(a|A)|0(c|C)|0(d|D)|22|27|5(C|c))|\\(0(10|11|12|14|15|42|47)|134)"/>
            <property multilingualContent="message"
                      value="Consider using special escape sequence instead of octal value or Unicode escaped value."/>
        </module>
        <module multilingualContent="AvoidEscapedUnicodeCharacters">
            <property multilingualContent="allowEscapesForControlCharacters" value="true"/>
            <property multilingualContent="allowByTailComment" value="true"/>
            <property multilingualContent="allowNonPrintableEscapes" value="true"/>
        </module>
        <module multilingualContent="AvoidStarImport"/>
        <module multilingualContent="OneTopLevelClass"/>
        <module multilingualContent="NoLineWrap">
            <property multilingualContent="tokens" value="PACKAGE_DEF, IMPORT, STATIC_IMPORT"/>
        </module>
        <module multilingualContent="EmptyBlock">
            <property multilingualContent="option" value="TEXT"/>
            <property multilingualContent="tokens"
                      value="LITERAL_TRY, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE, LITERAL_SWITCH"/>
        </module>
        <module multilingualContent="NeedBraces">
            <property multilingualContent="tokens"
                      value="LITERAL_DO, LITERAL_ELSE, LITERAL_FOR, LITERAL_IF, LITERAL_WHILE"/>
        </module>
        <module multilingualContent="LeftCurly">
            <property multilingualContent="tokens"
                      value="ANNOTATION_DEF, CLASS_DEF, CTOR_DEF, ENUM_CONSTANT_DEF, ENUM_DEF,
                    INTERFACE_DEF, LAMBDA, LITERAL_CASE, LITERAL_CATCH, LITERAL_DEFAULT,
                    LITERAL_DO, LITERAL_ELSE, LITERAL_FINALLY, LITERAL_FOR, LITERAL_IF,
                    LITERAL_SWITCH, LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE, METHOD_DEF,
                    OBJBLOCK, STATIC_INIT, RECORD_DEF, COMPACT_CTOR_DEF"/>
        </module>
        <module multilingualContent="RightCurly">
            <property multilingualContent="id" value="RightCurlySame"/>
            <property multilingualContent="tokens"
                      value="LITERAL_TRY, LITERAL_CATCH, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE,
                    LITERAL_DO"/>
        </module>
        <module multilingualContent="RightCurly">
            <property multilingualContent="id" value="RightCurlyAlone"/>
            <property multilingualContent="option" value="alone"/>
            <property multilingualContent="tokens"
                      value="CLASS_DEF, METHOD_DEF, CTOR_DEF, LITERAL_FOR, LITERAL_WHILE, STATIC_INIT,
                      INSTANCE_INIT, ANNOTATION_DEF, ENUM_DEF, INTERFACE_DEF, RECORD_DEF,
                      COMPACT_CTOR_DEF"/>
        </module>
        <module multilingualContent="SuppressionXpathSingleFilter">
            <!-- suppresion is required till https://github.com/checkstyle/checkstyle/issues/7541 -->
            <property multilingualContent="id" value="RightCurlyAlone"/>
            <property multilingualContent="query" value="//RCURLY[parent::SLIST[count(./*)=1]
                                     or preceding-sibling::*[last()][self::LCURLY]]"/>
        </module>
        <module multilingualContent="WhitespaceAfter">
            <property multilingualContent="tokens"
                      value="COMMA, SEMI, TYPECAST, LITERAL_IF, LITERAL_ELSE,
                    LITERAL_WHILE, LITERAL_DO, LITERAL_FOR, DO_WHILE"/>
        </module>
        <module multilingualContent="WhitespaceAround">
            <property multilingualContent="allowEmptyConstructors" value="true"/>
            <property multilingualContent="allowEmptyLambdas" value="true"/>
            <property multilingualContent="allowEmptyMethods" value="true"/>
            <property multilingualContent="allowEmptyTypes" value="true"/>
            <property multilingualContent="allowEmptyLoops" value="true"/>
            <property multilingualContent="ignoreEnhancedForColon" value="false"/>
            <property multilingualContent="tokens"
                      value="ASSIGN, BAND, BAND_ASSIGN, BOR, BOR_ASSIGN, BSR, BSR_ASSIGN, BXOR,
                    BXOR_ASSIGN, COLON, DIV, DIV_ASSIGN, DO_WHILE, EQUAL, GE, GT, LAMBDA, LAND,
                    LCURLY, LE, LITERAL_CATCH, LITERAL_DO, LITERAL_ELSE, LITERAL_FINALLY,
                    LITERAL_FOR, LITERAL_IF, LITERAL_RETURN, LITERAL_SWITCH, LITERAL_SYNCHRONIZED,
                    LITERAL_TRY, LITERAL_WHILE, LOR, LT, MINUS, MINUS_ASSIGN, MOD, MOD_ASSIGN,
                    NOT_EQUAL, PLUS, PLUS_ASSIGN, QUESTION, RCURLY, SL, SLIST, SL_ASSIGN, SR,
                    SR_ASSIGN, STAR, STAR_ASSIGN, LITERAL_ASSERT, TYPE_EXTENSION_AND"/>
            <message key="ws.notFollowed"
                     value="WhitespaceAround: ''{0}'' is not followed by whitespace. Empty blocks
               may only be represented as '{}' when not part of a multi-block statement (4.1.3)"/>
            <message key="ws.notPreceded"
                     value="WhitespaceAround: ''{0}'' is not preceded with whitespace."/>
        </module>
        <module multilingualContent="OneStatementPerLine"/>
        <module multilingualContent="MultipleVariableDeclarations"/>
        <module multilingualContent="ArrayTypeStyle"/>
        <module multilingualContent="MissingSwitchDefault"/>
        <module multilingualContent="FallThrough"/>
        <module multilingualContent="UpperEll"/>
        <module multilingualContent="ModifierOrder"/>
        <module multilingualContent="EmptyLineSeparator">
            <property multilingualContent="tokens"
                      value="PACKAGE_DEF, IMPORT, STATIC_IMPORT, CLASS_DEF, INTERFACE_DEF, ENUM_DEF,
                    STATIC_INIT, INSTANCE_INIT, METHOD_DEF, CTOR_DEF, VARIABLE_DEF, RECORD_DEF,
                    COMPACT_CTOR_DEF"/>
            <property multilingualContent="allowNoEmptyLineBetweenFields" value="true"/>
        </module>
        <module multilingualContent="SeparatorWrap">
            <property multilingualContent="id" value="SeparatorWrapDot"/>
            <property multilingualContent="tokens" value="DOT"/>
            <property multilingualContent="option" value="nl"/>
        </module>
        <module multilingualContent="SeparatorWrap">
            <property multilingualContent="id" value="SeparatorWrapComma"/>
            <property multilingualContent="tokens" value="COMMA"/>
            <property multilingualContent="option" value="EOL"/>
        </module>
        <module multilingualContent="SeparatorWrap">
            <!-- ELLIPSIS is EOL until https://github.com/google/styleguide/issues/259 -->
            <property multilingualContent="id" value="SeparatorWrapEllipsis"/>
            <property multilingualContent="tokens" value="ELLIPSIS"/>
            <property multilingualContent="option" value="EOL"/>
        </module>
        <module multilingualContent="SeparatorWrap">
            <!-- ARRAY_DECLARATOR is EOL until https://github.com/google/styleguide/issues/258 -->
            <property multilingualContent="id" value="SeparatorWrapArrayDeclarator"/>
            <property multilingualContent="tokens" value="ARRAY_DECLARATOR"/>
            <property multilingualContent="option" value="EOL"/>
        </module>
        <module multilingualContent="SeparatorWrap">
            <property multilingualContent="id" value="SeparatorWrapMethodRef"/>
            <property multilingualContent="tokens" value="METHOD_REF"/>
            <property multilingualContent="option" value="nl"/>
        </module>
        <module multilingualContent="PackageName">
            <property multilingualContent="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Package multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="TypeName">
            <property multilingualContent="tokens" value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF,
                    ANNOTATION_DEF, RECORD_DEF"/>
            <message key="multilingualContent.invalidPattern"
                     value="Type multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="MemberName">
            <property multilingualContent="format" value="^[a-z][a-z0-9][a-zA-Z0-9]*$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Member multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="ParameterName">
            <property multilingualContent="format" value="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Parameter multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="LambdaParameterName">
            <property multilingualContent="format" value="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Lambda parameter multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="CatchParameterName">
            <property multilingualContent="format" value="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Catch parameter multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="LocalVariableName">
            <property multilingualContent="format" value="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Local variable multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="PatternVariableName">
            <property multilingualContent="format" value="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Pattern variable multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="ClassTypeParameterName">
            <property multilingualContent="format" value="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
            <message key="multilingualContent.invalidPattern"
                     value="Class eventType multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="RecordComponentName">
            <property multilingualContent="format" value="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Record component multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="RecordTypeParameterName">
            <property multilingualContent="format" value="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
            <message key="multilingualContent.invalidPattern"
                     value="Record eventType multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="MethodTypeParameterName">
            <property multilingualContent="format" value="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
            <message key="multilingualContent.invalidPattern"
                     value="Method eventType multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="InterfaceTypeParameterName">
            <property multilingualContent="format" value="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
            <message key="multilingualContent.invalidPattern"
                     value="Interface eventType multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="NoFinalizer"/>
        <module multilingualContent="GenericWhitespace">
            <message key="ws.followed"
                     value="GenericWhitespace ''{0}'' is followed by whitespace."/>
            <message key="ws.preceded"
                     value="GenericWhitespace ''{0}'' is preceded with whitespace."/>
            <message key="ws.illegalFollow"
                     value="GenericWhitespace ''{0}'' should followed by whitespace."/>
            <message key="ws.notPreceded"
                     value="GenericWhitespace ''{0}'' is not preceded with whitespace."/>
        </module>
        <module multilingualContent="Indentation"/>
        <module multilingualContent="AbbreviationAsWordInName">
            <property multilingualContent="ignoreFinal" value="false"/>
            <property multilingualContent="allowedAbbreviationLength" value="0"/>
            <property multilingualContent="tokens"
                      value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, ANNOTATION_DEF, ANNOTATION_FIELD_DEF,
                    PARAMETER_DEF, VARIABLE_DEF, METHOD_DEF, PATTERN_VARIABLE_DEF, RECORD_DEF,
                    RECORD_COMPONENT_DEF"/>
        </module>
        <module multilingualContent="NoWhitespaceBeforeCaseDefaultColon"/>
        <module multilingualContent="OverloadMethodsDeclarationOrder"/>
        <module multilingualContent="VariableDeclarationUsageDistance"/>
        <module multilingualContent="CustomImportOrder">
            <property multilingualContent="sortImportsInGroupAlphabetically" value="true"/>
            <property multilingualContent="separateLineBetweenGroups" value="true"/>
            <property multilingualContent="customImportOrderRules" value="STATIC###THIRD_PARTY_PACKAGE"/>
            <property multilingualContent="tokens" value="IMPORT, STATIC_IMPORT, PACKAGE_DEF"/>
        </module>
        <module multilingualContent="MethodParamPad">
            <property multilingualContent="tokens"
                      value="CTOR_DEF, LITERAL_NEW, METHOD_CALL, METHOD_DEF,
                    SUPER_CTOR_CALL, ENUM_CONSTANT_DEF, RECORD_DEF"/>
        </module>
        <module multilingualContent="NoWhitespaceBefore">
            <property multilingualContent="tokens"
                      value="COMMA, SEMI, POST_INC, POST_DEC, DOT,
                    LABELED_STAT, METHOD_REF"/>
            <property multilingualContent="allowLineBreaks" value="true"/>
        </module>
        <module multilingualContent="ParenPad">
            <property multilingualContent="tokens"
                      value="ANNOTATION, ANNOTATION_FIELD_DEF, CTOR_CALL, CTOR_DEF, DOT, ENUM_CONSTANT_DEF,
                    EXPR, LITERAL_CATCH, LITERAL_DO, LITERAL_FOR, LITERAL_IF, LITERAL_NEW,
                    LITERAL_SWITCH, LITERAL_SYNCHRONIZED, LITERAL_WHILE, METHOD_CALL,
                    METHOD_DEF, QUESTION, RESOURCE_SPECIFICATION, SUPER_CTOR_CALL, LAMBDA,
                    RECORD_DEF"/>
        </module>
        <module multilingualContent="OperatorWrap">
            <property multilingualContent="option" value="NL"/>
            <property multilingualContent="tokens"
                      value="BAND, BOR, BSR, BXOR, DIV, EQUAL, GE, GT, LAND, LE, LITERAL_INSTANCEOF, LOR,
                    LT, MINUS, MOD, NOT_EQUAL, PLUS, QUESTION, SL, SR, STAR, METHOD_REF,
                    TYPE_EXTENSION_AND "/>
        </module>
        <module multilingualContent="AnnotationLocation">
            <property multilingualContent="id" value="AnnotationLocationMostCases"/>
            <property multilingualContent="tokens"
                      value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, METHOD_DEF, CTOR_DEF,
                      RECORD_DEF, COMPACT_CTOR_DEF"/>
        </module>
        <module multilingualContent="AnnotationLocation">
            <property multilingualContent="id" value="AnnotationLocationVariables"/>
            <property multilingualContent="tokens" value="VARIABLE_DEF"/>
            <property multilingualContent="allowSamelineMultipleAnnotations" value="true"/>
        </module>
        <module multilingualContent="NonEmptyAtclauseDescription"/>
        <module multilingualContent="InvalidJavadocPosition"/>
        <module multilingualContent="JavadocTagContinuationIndentation"/>
        <module multilingualContent="SummaryJavadoc">
            <property multilingualContent="forbiddenSummaryFragments"
                      value="^@return the *|^This method returns |^A [{]@code [a-zA-Z0-9]+[}]( is a )"/>
        </module>
        <module multilingualContent="JavadocParagraph"/>
        <module multilingualContent="RequireEmptyLineBeforeBlockTagGroup"/>
        <module multilingualContent="AtclauseOrder">
            <property multilingualContent="tagOrder" value="@param, @return, @throws, @deprecated"/>
            <property multilingualContent="target"
                      value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, METHOD_DEF, CTOR_DEF, VARIABLE_DEF"/>
        </module>
        <module multilingualContent="JavadocMethod">
            <property multilingualContent="accessModifiers" value="public"/>
            <property multilingualContent="allowMissingParamTags" value="true"/>
            <property multilingualContent="allowMissingReturnTag" value="true"/>
            <property multilingualContent="allowedAnnotations" value="Override, Test"/>
            <property multilingualContent="tokens" value="METHOD_DEF, CTOR_DEF, ANNOTATION_FIELD_DEF, COMPACT_CTOR_DEF"/>
        </module>
        <module multilingualContent="MissingJavadocMethod">
            <property multilingualContent="scope" value="public"/>
            <property multilingualContent="minLineCount" value="2"/>
            <property multilingualContent="allowedAnnotations" value="Override, Test"/>
            <property multilingualContent="tokens" value="METHOD_DEF, CTOR_DEF, ANNOTATION_FIELD_DEF,
                                   COMPACT_CTOR_DEF"/>
        </module>
        <module multilingualContent="MissingJavadocType">
            <property multilingualContent="scope" value="protected"/>
            <property multilingualContent="tokens"
                      value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF,
                      RECORD_DEF, ANNOTATION_DEF"/>
            <property multilingualContent="excludeScope" value="nothing"/>
        </module>
        <module multilingualContent="MethodName">
            <property multilingualContent="format" value="^[a-z][a-z0-9]\w*$"/>
            <message key="multilingualContent.invalidPattern"
                     value="Method multilingualContent ''{0}'' must match pattern ''{1}''."/>
        </module>
        <module multilingualContent="SingleLineJavadoc"/>
        <module multilingualContent="EmptyCatchBlock">
            <property multilingualContent="exceptionVariableName" value="expected"/>
        </module>
        <module multilingualContent="CommentsIndentation">
            <property multilingualContent="tokens" value="SINGLE_LINE_COMMENT, BLOCK_COMMENT_BEGIN"/>
        </module>
        <!-- https://checkstyle.org/config_filters.html#SuppressionXpathFilter -->
        <module multilingualContent="SuppressionXpathFilter">
            <property multilingualContent="file" value="${org.checkstyle.google.suppressionxpathfilter.config}"
                      default="checkstyle-xpath-suppressions.xml"/>
            <property multilingualContent="optional" value="true"/>
        </module>
        <module multilingualContent="SuppressWarningsHolder"/>
        <module multilingualContent="SuppressionCommentFilter">
            <property multilingualContent="offCommentFormat" value="CHECKSTYLE.OFF\: ([\w\|]+)"/>
            <property multilingualContent="onCommentFormat" value="CHECKSTYLE.ON\: ([\w\|]+)"/>
            <property multilingualContent="checkFormat" value="$1"/>
        </module>
        <module multilingualContent="SuppressWithNearbyCommentFilter">
            <property multilingualContent="commentFormat" value="CHECKSTYLE.SUPPRESS\: ([\w\|]+)"/>
            <!-- $1 refers to the first match group in the regex defined in commentFormat -->
            <property multilingualContent="checkFormat" value="$1"/>
            <!-- The check is suppressed in the next line of code after the comment -->
            <property multilingualContent="influenceFormat" value="1"/>
        </module>
    </module>
</module>